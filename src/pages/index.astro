---
import Hero from '@/components/Hero.astro';
import { supabase } from '@/lib/supabase';
import Layout from '@/layouts/Layout.astro';

const { isLoggedIn, user } = Astro.locals;
---

<Layout title="Task Manager">
  <Hero />
  {
    isLoggedIn ? (
      <div class="max-w-2xl mx-5 mt-10">
        <h2 class="text-2xl font-bold mb-4">Welcome back, {user.email}!</h2>
        <p class="text-gray-600">Manage your tasks and teams efficiently.</p>
      </div>
    ) : (
      <div class="max-w-2xl mx-5 mt-10 text-center">
        <h2 class="text-2xl font-bold mb-4">Get Started with Task Manager</h2>
        <p class="text-gray-600">
          Sign up or log in to manage your tasks and teams.
        </p>
      </div>
    )
  }
</Layout>
