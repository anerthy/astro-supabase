---
import Hero from '@/components/shared/Hero.astro';
import Layout from '@/layouts/Layout.astro';
import { actions } from 'astro:actions';

const { user } = Astro.locals;

const { data: teams, error } = await Astro.callAction(actions.getUserTeams, {});

if (error) {
  throw new Error('Failed to load teams: ' + error.message);
}
---

<Layout title="Teams">
  <Hero
    title={`Welcome back, ${user.email}!`}
    subtitle="Manage and collaborate with your teams."
  />
  {
    teams ? (
      teams.map((team) => (
        <a
          href={`/teams/${team.id}`}
          class="block border border-gray-300 rounded-md shadow-sm hover:shadow-md my-4 mx-5 hover:no-underline hover:text-inherit"
        >
          <div class="p-4">
            <h3 class="text-xl font-bold">{team?.name}</h3>
            <p class="text-gray-600">{team?.description}</p>
          </div>
        </a>
      ))
    ) : (
      <p class="p-4">No teams found.</p>
    )
  }
</Layout>
